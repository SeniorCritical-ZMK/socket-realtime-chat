<div class="card">
	<div class="card-header text-center">
	Welcome to {{name}}
	</div>

	<div class="card-body">
		<h5 class="card-title text-center">Please fill your informations!</h5>
		<div class="container">
			<form class="offset-4 col-sm-4" action="/users" method="post">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Enter name" name="name">
					<small id="emailHelp" class="form-text text-muted">We'll never share your name with anyone else.</small>
				</div>

				<div class="form-group">
					<label for="age">Age</label>
					<input type="number" class="form-control" id="age" placeholder="Enter age" name="age">
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" class="form-control" id="password" placeholder="Password" name="password">
				</div>
		</div>
			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>
</div>